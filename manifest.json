{
  "manifest_version": 3,
  "name": "Mini Bookmark Bar",
  "description": "Pin for quick access to your bookmark bar. No folders, just links.",
  "version": "1.0",
  "permissions": ["bookmarks"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "pics/bookmark16.png",
      "32": "pics/bookmark32.png",
      "48": "pics/bookmark48.png",
      "128": "pics/bookmark128.png"
    }
  },
  "icons": {
    "16": "pics/bookmark16.png",
    "32": "pics/bookmark32.png",
    "48": "pics/bookmark48.png",
    "128": "pics/bookmark128.png"
  }
}
